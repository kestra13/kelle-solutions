@page
@model KelleSolutions.Pages.Leads.CreateLeadModel
@{
    ViewData["Title"] = "Create Lead";
}
<!--
    Updated CreateLead.cshtml to use the new Lead model fields.
-->
<h2>Create New Lead</h2>

<form method="post">
    <!-- First Name input field -->
    <div class="form-group">
        <label asp-for="Lead.NameFirst" class="control-label"></label>
        <input asp-for="Lead.NameFirst" class="form-control" />
        <span asp-validation-for="Lead.NameFirst" class="text-danger"></span>
    </div>

    <!-- Middle Name input field -->
    <div class="form-group">
        <label asp-for="Lead.NameMiddle" class="control-label"></label>
        <input asp-for="Lead.NameMiddle" class="form-control" />
        <span asp-validation-for="Lead.NameMiddle" class="text-danger"></span>
    </div>

    <!-- Last Name input field -->
    <div class="form-group">
        <label asp-for="Lead.NameLast" class="control-label"></label>
        <input asp-for="Lead.NameLast" class="form-control" />
        <span asp-validation-for="Lead.NameLast" class="text-danger"></span>
    </div>

    <!-- Email input field -->
    <div class="form-group">
        <label asp-for="Lead.Email" class="control-label"></label>
        <input asp-for="Lead.Email" type="email" class="form-control" />
        <span asp-validation-for="Lead.Email" class="text-danger"></span>
    </div>

    <!-- Phone input field -->
    <div class="form-group">
        <label asp-for="Lead.Phone" class="control-label"></label>
        <input asp-for="Lead.Phone" type="tel" class="form-control" />
        <span asp-validation-for="Lead.Phone" class="text-danger"></span>
    </div>

    <!-- Organization Name input field -->
    <div class="form-group">
        <label asp-for="Lead.OrganizationName" class="control-label"></label>
        <input asp-for="Lead.OrganizationName" class="form-control" />
        <span asp-validation-for="Lead.OrganizationName" class="text-danger"></span>
    </div>

    <!-- Organization Title input field -->
    <div class="form-group">
        <label asp-for="Lead.OrganizationTitle" class="control-label"></label>
        <input asp-for="Lead.OrganizationTitle" class="form-control" />
        <span asp-validation-for="Lead.OrganizationTitle" class="text-danger"></span>
    </div>

    <!-- Tracking input field -->
    <div class="form-group">
        <label asp-for="Lead.Tracking" class="control-label"></label>
        <input asp-for="Lead.Tracking" class="form-control" />
        <span asp-validation-for="Lead.Tracking" class="text-danger"></span>
    </div>

    <!-- Submit and Cancel Buttons -->
    <button type="submit" class="btn btn-primary">Create Lead</button>
    <a asp-page="/Leads/Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
