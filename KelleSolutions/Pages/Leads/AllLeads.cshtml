    </div>
</div>

</div>

<div class="content-container">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Created</th>
                <th>Action </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AllLeads != null && Model.AllLeads.Any()){
                @foreach (var lead in Model.AllLeads) {
                    <tr>
                        <td>@lead.Code</td>
                        <td>@lead.NameFirst</td>
                        <td>@lead.Phone</td>
                        <td>@lead.Email</td>
                        <td>@lead.Created?.ToString("yyyy-MM-dd")</td>
                        <td>
                            <button class="btn btn-primary me-2"
                                onclick="prepareUpdate(
                                    @lead.Code,
                                    @lead.NameFirst,
                                    @lead.NameMiddle,
                                    @lead.NameLast,
                                    @lead.Email,
                                    @lead.Phone,
                                    @lead.OrganizationName,
                                    @lead.OrganizationTitle,
                                    @lead.Tracking,
                                    @lead.Created)"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editLeadModal">
                                    Edit
                            </button>
                            <button class ="btn btn-danger" onclick="prepareDelete(@lead.Code)" data-bs-toggle="modal" data-bs-target="#deleteLeadModal">Delete</button>
                        </td>
                    </tr>
                }
            }
            else {
                <tr class="no-leads-message">
                    <td colspan="6" class="text-center">No Leads found. Add a new lead to get started. </td>
                </tr>
            }
        </tbody>
    </table>
</div>


