@page
@model KelleSolutions.Pages.Roles.ViewTransactionModel
@{
    ViewData["Title"] = "View Transaction";
}

<h2>Add a transaction</h2>

<form method="post" class="form-group">
    <!-- Row for Date Fields -->
    <div class="row mb-3">
        <!-- Deposit Date -->
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DepositDate" class="form-label"></label>
                <input asp-for="DepositDate" type="date" class="form-control" />
                <span asp-validation-for="DepositDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Inspection Date -->
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="InspectionDate" class="form-label"></label>
                <input asp-for="InspectionDate" type="date" class="form-control" />
                <span asp-validation-for="InspectionDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Loan Date -->
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="LoanDate" class="form-label"></label>
                <input asp-for="LoanDate" type="date" class="form-control" />
                <span asp-validation-for="LoanDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Appraisal Date -->
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="AppraisalDate" class="form-label"></label>
                <input asp-for="AppraisalDate" type="date" class="form-control" />
                <span asp-validation-for="AppraisalDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Property Information -->
    <div class="mb-3">
        <label asp-for="PropertyInformation" class="form-label"></label>
        <input asp-for="PropertyInformation" class="form-control" />
        <span asp-validation-for="PropertyInformation" class="text-danger"></span>
    </div>

    <!-- Transition Details -->
    <div class="mb-3">
        <label asp-for="TransitionDetails" class="form-label"></label>
        <input asp-for="TransitionDetails" class="form-control" />
        <span asp-validation-for="TransitionDetails" class="text-danger"></span>
    </div>

      <!-- Status Dropdown -->
      <div class="mb-3">
          <label asp-for="Status" class="form-label"></label>
          <select asp-for="Status" class="form-control form-select">
              <option value="">Select Status</option>
              <option value="Active">Active</option>
              <option value="Pending">Pending</option>
              <option value="On-Hold">On-Hold</option>
              <option value="Completed">Completed</option>
              <option value="Cancelled">Cancelled</option>
          </select>
          <span asp-validation-for="Status" class="text-danger"></span>
      </div>

      <!-- Comments Section -->
    <div class="mb-3">
        <label asp-for="Comments" class="form-label"></label>
        <textarea asp-for="Comments" class="form-control" rows="4" placeholder="Add your comments here..."></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

      <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="modal fade" id="updateTransactionModal" tabindex="-1" aria-labelledby="updateTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateTransactionModalLabel">Update Transaction</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="Update">
                    <input type="hidden" id="updateId" name="id"/>
                    <div class="form-group">
                        <label for="updateDepositDate">DepositDate</label>
                        <input type="date" class="form-control" id="updateDepositDate" name="DepositDate" required />
                    </div>
                    <div class="form-group">
                        <label for="updateInspectionDate">Inspection Date</label>
                        <input type="date" class="form-control" id="updateInspectionDate" name="InspectionDate" required />
                    </div>
                    <div class="form-group">
                        <label for="updateLoanDate">Loan Date</label>
                        <input type="date" class="form-control" id="updateLoanDate" name="LoanDate" required />
                    </div>
                    <div class="form-group">
                        <label for="updateAppraisalDate">Appraisal Date</label>
                        <input type="date" class="form-control" id="updateAppraisalDate" name="AppraisalDate" required />
                    </div>
                    <div class="form-group">
                        <label for="updatePropertyInfo">Property Information</label>
                        <input type="text" class="form-control" id="updatePropertyInfo" name="PropertyInfo" required />
                    </div>
                    <div class="form-group">
                        <label for="updateTransitionDetails">Transition Details</label>
                        <input type="text" class="form-control" id="updateTransitionDetails" name="TransitionDetails" required />
                    </div>
                    <div class="form-group">
                        <label for="updateStatus">Status</label>
                        <select class="form-control" id="updateStatus" name="Status" required>
                            <option value="Active">Active</option>
                            <option value="Pending">Pending</option>
                            <option value="On-Hold">On-Hold</option>
                            <option value="Completed">Completed</option>
                            <option value="Canceled">Canceled</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="updateComments">Comments</label>
                        <input type="text" class="form-control" id="updateComments" name="Comments" required />
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>