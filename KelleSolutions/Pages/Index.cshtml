@page
@model IndexModel

@{
    ViewData["Title"] = "Home";
    ViewData["HideFooter"] = true;
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&display=swap');

    .sora-font {
        font-family: 'Sora', sans-serif;
    }

    .logo {
        max-height: 100px;
        margin: 50px;
    }

    .header-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        width: 100%;
    }

    .logo-link {
        text-decoration: none;
        display: inline-block;
    }

    .custom-footer {
        padding: 20px 40px;
        background: white;
        margin-top: 40px;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1400px;
        margin: 0 auto;
    }

    .footer-left {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .footer-logo {
        height: 24px;
    }

    .copyright {
        color: #666;
        font-size: 14px;
    }

    .footer-nav {
        display: flex;
        gap: 24px;
    }

    .footer-link {
        color: #666;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.2s;
    }

    .footer-link:hover {
        color: #333;
    }

    .text-center {
        text-align: center;
        width: 100%;
    }

    .auth-buttons {
        display: flex;
        gap: 16px;
        margin-top: 10px;
    }

    .btn {
        padding: 16px 40px;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
        font-size: 18px;
    }

    .btn-primary {
        background-color: white;
        border: 1px solid #e0e0e0;
        background-image: linear-gradient(45deg, #FF6B6B, #FFB84C);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .btn-primary:hover {
        background-color: rgba(255, 107, 107, 0.1);
        border-color: #FF6B6B;
    }

    .btn-outline-primary {
        background-image: linear-gradient(45deg, #FF6B6B, #FFB84C);
        color: white;
        border: none;
    }

    .btn-outline-primary:hover {
        background-image: linear-gradient(45deg, #ff5252, #ffa833);
        color: white;
        opacity: 0.9;
    }
</style>

<div class="container text-center">
    <h1 class="sora-font">Welcome to</h1>
</div>

<div class="header-section" style="margin-top: 1px;">
    <a href="/" class="logo-link">
        <img src="~/images/KELLE_logo_fullcolor.png" alt="Company Logo" class="logo">
    </a>
    <div class="container text-center" style="margin-top: 1px;">
    <h1 class="sora-font">"Real Estate <span style="background-image: linear-gradient(45deg, #FF6B6B, #FFB84C); -webkit-background-clip: text; background-clip: text; color: transparent;">Simplified</span>"</h1>
</div>
    <div class="auth-buttons" style="margin-top: 50px;">
        <a href="/Identity/Account/Login" class="btn btn-primary">Log In</a>
        <a href="/Identity/Account/Register" class="btn btn-outline-primary">Sign Up</a>
    </div>
</div>

<div class="container" style="margin-top: 50px;">
    <img src="~/images/landingPagePromo.png" alt="Kelle Solutions Promo" class="img-fluid" style="max-width: 75%; display: block; margin-left: auto; margin-right: auto;">
</div>

<footer class="custom-footer">
    <div class="footer-content">
        <div class="footer-left">
            <img src="~/images/KELLE_footer_logo.svg" alt="Kelle" class="footer-logo">
            <span class="copyright">© 2025 Kelle, Inc.</span>
        </div>
        <div class="footer-right">
            <nav class="footer-nav">
                <a href="#" class="footer-link">Terms</a>
                <a href="#" class="footer-link">Privacy</a>
                <a href="#" class="footer-link">Accessibility</a>
                <a href="#" class="footer-link">Security</a>
                <a href="#" class="footer-link">Docs</a>
                <a href="#" class="footer-link">Support</a>
            </nav>
        </div>
    </div>
</footer>
