@page
@using KelleSolutions.Models
@model KelleSolutions.Pages.People.ViewPersonModel
@{
    ViewData["Title"] = "View Person";
}

<link rel="stylesheet" href="~/css/mainpages.css" />
<link href="https://fonts.googleapis.com/css2?family=Sora:wght@100;200;250;300;400;500;600&display=swap" rel="stylesheet">

<div class="header-section">
    <p>
        <a href="/AT_Dashboard">
            <svg xmlns="http://www.w3.org/2000/svg" height="1.2em" viewBox="0 -960 960 960" width="1.2em" fill="#5f6368">
                <path d="M240-200h133.85v-237.69h212.3V-200H720v-360L480-740.77 240-560v360Zm-60 60v-450l300-225.77L780-590v450H526.15v-237.69h-92.3V-140H180Zm300-330.38Z"/>
            </svg>
        </a>
        <span>/</span>
        <a href="/People/People">People</a>
        <span>/</span>
        <span class="pagename-text">View Person</span>
    </p>
</div>

<div class="content-container">
    <form method="post" class="form-group">
        <!-- Name Fields -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="PersonRecord.NameFirst" class="form-label">First Name</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.NameFirst" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.NameFirst" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.NameFirst" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="PersonRecord.NameMiddle" class="form-label">Middle Name</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.NameMiddle" class="form-control" />
                }
                else
                {
                    <input asp-for="PersonRecord.NameMiddle" class="form-control" readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.NameMiddle" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="PersonRecord.NameLast" class="form-label">Last Name</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.NameLast" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.NameLast" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.NameLast" class="text-danger"></span>
            </div>
        </div>

        <!-- Display Name & Headline -->
        <div class="mb-3">
            <label asp-for="PersonRecord.NameDisplay" class="form-label">Display Name</label>
            @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
            {
                <input asp-for="PersonRecord.NameDisplay" class="form-control" required />
            }
            else
            {
                <input asp-for="PersonRecord.NameDisplay" class="form-control" required readonly="readonly" />
            }
            <span asp-validation-for="PersonRecord.NameDisplay" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PersonRecord.Headline" class="form-label">Headline</label>
            @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
            {
                <input asp-for="PersonRecord.Headline" class="form-control" />
            }
            else
            {
                <input asp-for="PersonRecord.Headline" class="form-control" readonly="readonly" />
            }
            <span asp-validation-for="PersonRecord.Headline" class="text-danger"></span>
        </div>

        <!-- Email Fields -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.EmailPrimary" class="form-label">Primary Email</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.EmailPrimary" type="email" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.EmailPrimary" type="email" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.EmailPrimary" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.EmailSecondary" class="form-label">Secondary Email</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.EmailSecondary" type="email" class="form-control" />
                }
                else
                {
                    <input asp-for="PersonRecord.EmailSecondary" type="email" class="form-control" readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.EmailSecondary" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.EmailPrimaryLabel" class="form-label">Primary Email Label</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.EmailPrimaryLabel" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.EmailPrimaryLabel" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.EmailPrimaryLabel" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.EmailSecondaryLabel" class="form-label">Secondary Email Label</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.EmailSecondaryLabel" class="form-control" />
                }
                else
                {
                    <input asp-for="PersonRecord.EmailSecondaryLabel" class="form-control" readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.EmailSecondaryLabel" class="text-danger"></span>
            </div>
        </div>

        <!-- Phone Fields -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.PhonePrimary" class="form-label">Primary Phone</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.PhonePrimary" type="tel" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.PhonePrimary" type="tel" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.PhonePrimary" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.PhoneSecondary" class="form-label">Secondary Phone</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.PhoneSecondary" type="tel" class="form-control" />
                }
                else
                {
                    <input asp-for="PersonRecord.PhoneSecondary" type="tel" class="form-control" readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.PhoneSecondary" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.PhonePrimaryLabel" class="form-label">Primary Phone Label</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.PhonePrimaryLabel" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.PhonePrimaryLabel" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.PhonePrimaryLabel" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="PersonRecord.PhoneSecondaryLabel" class="form-label">Secondary Phone Label</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.PhoneSecondaryLabel" class="form-control" />
                }
                else
                {
                    <input asp-for="PersonRecord.PhoneSecondaryLabel" class="form-control" readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.PhoneSecondaryLabel" class="text-danger"></span>
            </div>
        </div>

        <!-- Address Fields -->
        <div class="row">
            <div class="col-md-12 mb-3">
                <label asp-for="PersonRecord.Street" class="form-label">Street</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.Street" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.Street" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.Street" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="PersonRecord.City" class="form-label">City</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.City" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.City" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.City" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="PersonRecord.StateProvince" class="form-label">State/Province</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.StateProvince" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.StateProvince" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.StateProvince" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="PersonRecord.Postal" class="form-label">Postal Code</label>
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.Postal" class="form-control" required />
                }
                else
                {
                    <input asp-for="PersonRecord.Postal" class="form-control" required readonly="readonly" />
                }
                <span asp-validation-for="PersonRecord.Postal" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="PersonRecord.Country" class="form-label">Country</label>
            @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
            {
                <input asp-for="PersonRecord.Country" class="form-control" required />
            }
            else
            {
                <input asp-for="PersonRecord.Country" class="form-control" required readonly="readonly" />
            }
            <span asp-validation-for="PersonRecord.Country" class="text-danger"></span>
        </div>

        <!-- Category Field -->
        <div class="mb-3">
            <label asp-for="PersonRecord.Category" class="form-label">Category</label>
            @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
            {
                <select asp-for="PersonRecord.Category" class="form-control form-select">
                    <option value="@((int)CategoryEnum.Category1)">Category 1</option>
                    <option value="@((int)CategoryEnum.Category2)">Category 2</option>
                    <option value="@((int)CategoryEnum.Category3)">Category 3</option>
                </select>
            }
            else
            {
                <select asp-for="PersonRecord.Category" class="form-control form-select" disabled="disabled">
                    <option value="@((int)CategoryEnum.Category1)">Category 1</option>
                    <option value="@((int)CategoryEnum.Category2)">Category 2</option>
                    <option value="@((int)CategoryEnum.Category3)">Category 3</option>
                </select>
            }
            <span asp-validation-for="PersonRecord.Category" class="text-danger"></span>
        </div>

        <!-- Marketing Preferences -->
        <div class="mb-3">
            <div class="form-check">
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.DoNotMarket" class="form-check-input" type="checkbox" />
                }
                else
                {
                    <input asp-for="PersonRecord.DoNotMarket" class="form-check-input" type="checkbox" disabled="disabled" />
                }
                <label asp-for="PersonRecord.DoNotMarket" class="form-check-label">Do Not Market</label>
            </div>
            <div class="form-check">
                @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
                {
                    <input asp-for="PersonRecord.DoNotContact" class="form-check-input" type="checkbox" />
                }
                else
                {
                    <input asp-for="PersonRecord.DoNotContact" class="form-check-input" type="checkbox" disabled="disabled" />
                }
                <label asp-for="PersonRecord.DoNotContact" class="form-check-label">Do Not Contact</label>
            </div>
        </div>

        <!-- Notes & Bio -->
        <div class="mb-3">
            <label asp-for="PersonRecord.Comments" class="form-label">Comments</label>
            @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
            {
                <textarea asp-for="PersonRecord.Comments" class="form-control" rows="3"></textarea>
            }
            else
            {
                <textarea asp-for="PersonRecord.Comments" class="form-control" rows="3" readonly="readonly"></textarea>
            }
            <span asp-validation-for="PersonRecord.Comments" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PersonRecord.Bio" class="form-label">Bio</label>
            @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
            {
                <textarea asp-for="PersonRecord.Bio" class="form-control" rows="3"></textarea>
            }
            else
            {
                <textarea asp-for="PersonRecord.Bio" class="form-control" rows="3" readonly="readonly"></textarea>
            }
            <span asp-validation-for="PersonRecord.Bio" class="text-danger"></span>
        </div>

        <!-- System Fields (Read-only) -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Created</label>
                <input value="@Model.PersonRecord.Created.ToString("yyyy-MM-dd HH:mm")" class="form-control" readonly />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Updated</label>
                <input value="@Model.PersonRecord.Updated.ToString("yyyy-MM-dd HH:mm")" class="form-control" readonly />
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-4">
            @if (User.IsInRole("Admin") || User.IsInRole("Broker"))
            {
                <button type="submit" class="btn btn-primary me-2">Save Changes</button>
            }
            <a href="/People/People" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
