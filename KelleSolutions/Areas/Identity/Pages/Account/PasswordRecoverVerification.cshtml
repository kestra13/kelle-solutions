@page
@model PasswordRecoverVerification
@{
    ViewData["Title"] = "Enter Verification Code";
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="container mt-5">
    <header>
        <img src="~/images/KELLE_logo_fullcolor.png" alt="Kelle Logo" style="margin-bottom: 20px;">
    </header>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <!-- Heading -->
                    <div class="text-center mb-4"></div>
                    <h4 class="text-center mb-4">
                        <div class="log-in-heading">Enter the verification code we sent your email</div>
                    </h4>

                    <!-- Form -->
                    <form method="post">
                    
                        <!-- Code Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Verification" class="form-label">Code</label>
                            <input asp-for="Input.Verification"
                                   class="form-control"
                                   autocomplete="verify"
                                   aria-required="true"
                                   placeholder="Enter your code" />
                            <span asp-validation-for="Input.Verification" class="text-danger"></span>
                        </div>
                        
                        <!-- Error Message (if invalid code) -->
                        <div class="text-center text-danger mb-3">
                            @ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage
                        </div>

                        <!-- Verify Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Verify</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
