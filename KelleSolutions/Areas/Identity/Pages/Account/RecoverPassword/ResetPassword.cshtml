@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="container mt-5">
    <header>
        <img src="~/images/KELLE_logo_fullcolor.png" alt="Kelle Logo" style="margin-bottom: 20px;">
    </header>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <!-- Heading -->
                    <div class="text-center mb-4"></div>
                    <h4 class="text-center mb-4">
                        <div class="log-in-heading">Change Password</div>
                    </h4>

                    <!-- Form -->
                    <form method="post">

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">New Password</label>
                            <input asp-for="Input.Password" 
                                   class="form-control" 
                                   type="password" 
                                   autocomplete="new-password" 
                                   placeholder="Enter your new password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input asp-for="Input.ConfirmPassword" 
                                   class="form-control" 
                                   type="password" 
                                   autocomplete="new-password" 
                                   placeholder="Re-enter your new password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Confirm Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Confirm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
